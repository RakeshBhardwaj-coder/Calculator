<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preCalculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:textAlignment="textEnd"
            android:textSize="28sp"></TextView>

        <TextView
            android:id="@+id/calculatedResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:textAlignment="textEnd"
            android:textColor="@color/orangeColor"
            android:textSize="32dp" />

        <EditText
            android:cursorVisible="false"
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:textAlignment="textEnd"
            android:textColor="@color/orangeColor"
            android:textSize="28dp"
            tools:ignore="SpeakableTextPresentCheck"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="monospace"
                android:minHeight="80dp"
                android:onClick="clearBtn"
                android:text="C"
                android:textColor="@color/orangeColor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:minHeight="80dp"
                android:onClick="delBtn"
                android:text="del"
                android:textAllCaps="false"
                android:textColor="@color/orangeColor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="cursive"
                android:minHeight="80dp"
                android:onClick="percentageBtn"
                android:text="%"
                android:textColor="@color/orangeColor"
                android:textSize="32sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="cursive"
                android:minHeight="80dp"
                android:onClick="divBtn"
                android:text="/"
                android:textColor="@color/orangeColor"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="sevenBtn"
                android:text="7"
                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="eightBtn"
                android:text="8"
                android:textColor="#333"
                android:textSize="32sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="nineBtn"
                android:text="9"
                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_multiple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="monospace"
                android:minHeight="80dp"
                android:onClick="mulBtn"
                android:text="X"
                android:textColor="@color/orangeColor"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="fourBtn"
                android:text="4"
                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="fiveBtn"
                android:text="5"
                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="sixBtn"
                android:text="6"
                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="cursive"
                android:minHeight="80dp"
                android:onClick="minBtn"
                android:text="-"
                android:textColor="#EF6C00"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="oneBtn"
                android:text="1"
                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="twoBtn"
                android:text="2"
                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="threeBtn"
                android:text="3"
                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="monospace"
                android:minHeight="80dp"
                android:onClick="plusBtn"
                android:text="+"
                android:textColor="@color/orangeColor"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:text="0"
                android:onClick="zeroBtn"

                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_par"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:text="( )"
                android:onClick="parentasisBtn"

                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroudButtonColor"
                android:minHeight="80dp"
                android:onClick="dotBtn"

                android:text="."
                android:textColor="#333"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="monospace"
                android:minHeight="80dp"
                android:onClick="equalsBtn"
                android:text="="
                android:textColor="@color/orangeColor"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>